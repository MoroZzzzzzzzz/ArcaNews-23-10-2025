
# Database Configuration
POSTGRES_USER=arcadia
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=arcadia_news
POSTGRES_PORT=5432

# Application Configuration
APP_PORT=3000
NODE_ENV=production

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_min_32_characters

# AWS S3 Configuration (для загрузки файлов)
AWS_PROFILE=hosted_storage
AWS_REGION=us-west-2
AWS_BUCKET_NAME=your_bucket_name
AWS_FOLDER_PREFIX=arcadia/

# AWS Credentials (если не используется AWS_PROFILE)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Nginx Configuration (для production режима)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
