
# Production Environment Configuration
# IMPORTANT: Copy this to .env and fill in your values

# Database Configuration
POSTGRES_USER=arcadia
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
POSTGRES_DB=arcadia_news
POSTGRES_PORT=5432
DATABASE_URL=postgresql://arcadia:CHANGE_THIS_TO_SECURE_PASSWORD@postgres:5432/arcadia_news

# Application Configuration
APP_PORT=3000
NODE_ENV=production

# NextAuth Configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=GENERATE_WITH_openssl_rand_base64_32

# AWS S3 Configuration
AWS_PROFILE=hosted_storage
AWS_REGION=us-west-2
AWS_BUCKET_NAME=your_s3_bucket_name
AWS_FOLDER_PREFIX=arcadia/

# Optional: AWS Credentials (if not using AWS_PROFILE)
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Optional: Email Configuration (for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Optional: Analytics
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Optional: Sentry Error Tracking
# SENTRY_DSN=https://xxx@sentry.io/xxx
